---
import { Icon } from 'astro-icon/components';

const tooltipText = {
  codeberg: "Visit Site",
  github: "Visit Site",
  misskey: "Visit Site",
  discord: "Copy To Clipboard",
  email: "Copy To Clipboard"
};
---

<div class="noselect social-icons">
	<a href="https://codeberg.org/hpsaucii" target="_blank" class="icon-button" aria-label="Codeberg">
		<Icon name="simple-icons:codeberg" />
		<span class="tooltiptext">{tooltipText.codeberg}</span>
	</a>
	<a href="https://github.com/hpsaucii" target="_blank" class="icon-button" aria-label="Github">
		<Icon name="simple-icons:github" />
		<span class="tooltiptext">{tooltipText.github}</span>
	</a>
	<a href="https://transfem.social/@hpsaucii" target="_blank" class="icon-button" aria-label="transfem.social">
		<Icon name="simple-icons:misskey" />
		<span class="tooltiptext">{tooltipText.misskey}</span>
	</a>
	<a href="https://discordapp.com/users/578110568209055756" class="icon-button" aria-label="Discord">
		<Icon name="simple-icons:discord" />
		<span class="tooltiptext">{tooltipText.discord}</span>
	</a>
	<a href="mailto:me@hpsaucii.dev" class="icon-button jsonly" aria-label="Discord">
		<Icon name="tabler:mail-filled" />
		<span class="tooltiptext">{tooltipText.email}</span>
	</a>
</div>

<style>
	.social-icons {
		font-size: 3rem;
	}

	.icon-button {
	  background: none;
	  border: none;
	  padding: 0;
	  cursor: pointer;
	  display: inline-flex;
	  align-items: center;
	  justify-content: center;
	  width: 48px;
	  height: 48px;
	  margin: 0 8px;
	  position: relative;
	}

	.icon-button:focus {
	  outline: none;
	}

	.icon-button .tooltiptext {
	  font-size: 1rem;
	  visibility: hidden;
	  padding: 1rem 1rem;
	  background-color: var(--mantle);
	  color: var(--text);
	  text-align: center;
	  border-radius: 0.1em;
	  white-space: nowrap;
	  position: absolute;
	  z-index: 1;
	  bottom: 100%;
	  left: 50%;
	  transform: translateX(-50%);
	  margin-bottom: 5px;
	  transition-property: visibility;
	  transition-delay: 0s;
	}

	.icon-button .tooltiptext::after {
	  content: '';
	  position: absolute;
	  top: 100%;
	  left: 50%;
	  transform: translateX(-50%);
	  border-width: 5px;
	  border-style: solid;
	  border-color: var(--mantle) transparent transparent transparent;
	}

	.icon-button:hover .tooltiptext {
	  visibility: visible;
	  transition-delay: 0.3s;
	}

	[data-icon] {
	    color: var(--text);
	}
</style>
